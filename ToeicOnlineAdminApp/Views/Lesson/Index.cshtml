@using Application.ViewModels.Common;
@using Application.ViewModels.Lessons;
@model PagedResult<LessonVm>
@{
    ViewData["Title"] = "Danh sách bài giảng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts {
    <script>setTimeout(function () {
            $('#alertMsg').fadeOut('slow');

        }, 2000);</script>
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <div class="row">
                    <div class="col-sm-12 col-md-6">
                        <div class="dataTables_length" id="dataTable_length">
                            <div class="row">
                                <div class="col-sm-6">
                                <label>
                                Level:
                                </label>
                                <select asp-for="@Model.Items[0].Level" asp-items="@(new SelectList(ViewBag.Level))" name="dataTable_length" aria-controls="dataTable" class="custom-select custom-select-sm form-control form-control-sm">
                                </select>
                            </div>
                            <div class="col-sm-6">
                                <label>
                                Category:
                                </label>
                                <select asp-for="@Model.Items[0].CategoryName" asp-items="@(new SelectList(ViewBag.Category))" name="dataTable_length" aria-controls="dataTable" class="custom-select custom-select-sm form-control form-control-sm">
                                </select>
                            </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 col-xs-12">
                                <a class="btn btn-success m-2" asp-action="Create" asp-controller="Lesson">Tạo mới</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6">
                        <div id="dataTable_filter" class="dataTables_filter">
                            <label>
                                Search:
                            </label>
                            <form action="/Lesson/Index" method="get">
                                <div class="row">
                                    <div class="col-md-7">
                                        <input type="text" name="keyword" value="@ViewBag.Keyword" class="form-control form-control-sm" placeholder="Tìm kiếm" aria-controls="dataTable">
                                    </div>
                                    <div class="col-md-5">
                                        <button type="submit" class="btn btn-success">Tìm</button>
                                        <button type="button" class="btn btn-dark" onclick="window.location.href='/Lesson/Index'">Đặt lại</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                @if (ViewBag.SuccessMsg != null)
                {
                    <div id="alertMsg" class="alert alert-success" role="alert">
                        @ViewBag.SuccessMsg
                    </div>
                }
                <div class="row">
                    <div class="col-sm-12">
                        <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th rowspan="1" colspan="1">Loại</th>
                                    <th rowspan="1" colspan="1">Tiêu đề</th>
                                    <th rowspan="1" colspan="1">Cấp độ</th>
                                    <th rowspan="1" colspan="1">Giáo viên đăng tải</th>
                                    <th rowspan="1" colspan="1">Mô tả</th>
                                    <th rowspan="1" colspan="1">Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var items in Model.Items)
                                {
                                    <tr role="row" class="odd">
                                        <td class="sorting_1">@items.CategoryName</td>
                                        <td>@items.Title</td>
                                        <td>@items.Level</td>
                                        <td>@items.TeacherName</td>
                                        <td>@items.Description</td>
                                        <td>
                                            @Html.ActionLink("Sửa", "Edit", new { id = items.Id }) |
                                            @Html.ActionLink("Xem", "Details", new { id = items.Id }) |
                                            <a href="/User/Delete/@items.Id"> Delete </a> |
                                            <a href="/User/RoleAssign/@items.Id"> Role Assign </a>
                                            @*@Html.ActionLink("Gán quyền", "RoleAssign", new { id = items.Id })*@
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-md-5">
                        <div class="dataTables_info" id="dataTable_info" role="status" aria-live="polite">Showing 1 to 10 of 57 entries</div>
                    </div>
                    <div class="col-sm-12 col-md-7">
                        <div class="dataTables_paginate paging_simple_numbers" id="dataTable_paginate">
                            @await Component.InvokeAsync("Pager", Model)
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>